<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentB">

    <TextView
        android:id="@+id/deals2"
        android:layout_width="209dp"
        android:layout_height="20dp"
        android:layout_marginTop="32dp"
        android:textColor="@color/red"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pic2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deals2" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="151dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/pic2"
        app:layout_constraintTop_toBottomOf="@+id/deals2" />

    <TextView
        android:id="@+id/details2"
        android:layout_width="151dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/pic2"
        app:layout_constraintTop_toBottomOf="@+id/name2" />

    <TextView
        android:id="@+id/period2"
        android:layout_width="151dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/pic2"
        app:layout_constraintTop_toBottomOf="@+id/details2" />

    <TextView
        android:id="@+id/prevPrice"
        android:layout_width="68dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/pic2"
        app:layout_constraintTop_toBottomOf="@+id/period2" />

    <TextView
        android:id="@+id/discPrice"
        android:layout_width="69dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/green"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/prevPrice"
        app:layout_constraintTop_toBottomOf="@+id/period2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/icon_pin"
        app:layout_constraintStart_toEndOf="@+id/pic2"
        app:layout_constraintTop_toBottomOf="@+id/prevPrice" />

    <TextView
        android:id="@+id/location"
        android:layout_width="123dp"
        android:layout_height="16dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/discPrice" />
</androidx.constraintlayout.widget.ConstraintLayout>